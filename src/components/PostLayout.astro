---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="max-w-4xl mx-auto py-20 px-6 md:px-16">
    <a href="/blog" class="font-mono text-emerald-500 text-sm mb-6 inline-block hover:underline uppercase tracking-widest" aria-label="Back to Blog">‚Üê Back to Blog</a>
    
    <h1 class="text-4xl md:text-5xl font-semibold text-white mb-8 tracking-tight">{title}</h1>
    
    <div class="prose prose-invert prose-emerald max-w-none text-neutral-400 leading-relaxed text-lg">
        <slot />
    </div>
</div>
